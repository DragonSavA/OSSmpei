<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SmallMainText" parent="MainText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SmallSecondaryText" parent="SecondaryText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="HyperText" parent="SecondaryText">
        <item name="android:textColor">@color/text_hyper_blue</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButton" parent="DefaultButton">
        <item name="android:background">@drawable/background_secondary_button</item>
        <item name="android:textColor">@color/main_blue</item>
    </style>

    <style name="PrimaryEditText">
        <item name="android:background">@drawable/shape_primary_edit_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="OSSRadioButton">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:buttonTint">@color/main_blue</item>
    </style>

</resources>