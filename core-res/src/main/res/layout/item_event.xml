<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/background_subject"
    android:orientation="horizontal"
    android:padding="7dp">

    <View
        android:id="@+id/indicator"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_indicator_red" />

    <LinearLayout
        android:id="@+id/eventLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventTime"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:20 - 10:55" />

            <TextView
                android:id="@+id/eventType"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Лекция" />
        </LinearLayout>

        <TextView
            android:id="@+id/eventName"
            style="@style/MainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Математический анализ" />

        <TextView
            android:id="@+id/eventPlace"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="ЭО и ДОТ" />

        <TextView
            android:id="@+id/eventOwnerName"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Доц. Алексиадис Н. Ф." />

    </LinearLayout>

</LinearLayout>